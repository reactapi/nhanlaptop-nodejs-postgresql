    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/customer.css">
    <title>NHAN LAPTOP - Khách hàng</title>
</head>
<body>

    <div class="admin-wrapper">
        <nav class="nav">
            <ul class="navbar">
                <li class="nav-item bars">
                    <a href="/customer/<%= customer.userId %>"><i class="fa-solid fa-bars"></i></i></a>
                </li>
                <li class="nav-item">
                    <a href="/">Về Website</a>
                </li>
            </ul>
            <ul class="navbar ml-auto">
                <li class="nav-item">
                    <a href="/auth/logout">Đăng xuất</a>
                </li>
            </ul>

        </nav>

        <!--  -->

        <div class="main-sidebar">
            <div class="logo">
                <a href="">
                    <% if (customer.avatar) { %>

                        <img src="<%= customer.avatar %> " alt="">

                    <% } else { %>
                        <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="">
                    <% } %> 
                    <span>Chào, <%= customer.fullName %> </span>
                </a>
            </div>
            <div class="sidebar-container">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/customer/<%= customer.userId %>">
                            <i class="fa-solid fa-gear"></i>
                            <span>Thông tin tài khoản</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/customer/<%= customer.userId %>/avatar">
                            <i class="fa-solid fa-image"></i>
                            <span>Cập nhật ảnh đại diện</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/customer/<%= customer.userId %>/myorder">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/customer/<%= customer.userId %>/doi-mat-khau">
                            <i class="fa-solid fa-key"></i>
                            <span>Đổi mật khẩu</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
