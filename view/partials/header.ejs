                    <a href="/"><h1 class="heading-home">NHAN LAPTOP</h1></a>
                </div>
                <div class="wrapper-search">
                    <form action="/tim-kiem" method="GET" class="form-search">
                        <div class="form-group">
                            <input type="text"  name="q" class="form-control" placeholder="Tìm kiếm sản phẩm">
                            <div class="loading">
                                <img src="/image/loading-2.gif" alt="">
                            </div>
                            <button type="submit" class="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
                        </div>
                        <div class="live-search-result">
                            <ul class="search-result">
    
                            </ul>
                        </div>
                    </form>
                </div>
               <div class="header-left">
                    <div class="wrapper-auth">
                        <% if (user && user.role === 0) { %>
                            <% if (user.avatar) { %>
                                <a href="/customer/<%= user.userId %>" class="icon-auth">
                                    <img src="<%= user.avatar %>" alt="">
                                </a>
    
                            <% } else { %>
                                <a href="/customer/<%= user.userId %>" class="icon-auth">
                                    <i class="fas fa-user"></i>
                                </a>
                            <% } %> 

                        <% } else { %>  
                            <button class="icon-auth">
                                <i class="fas fa-user"></i>
                            </button>
                        <% } %> 
                       
                        <span>
                            <% if (user && user.role == 0) { %> 
                                <a href="/customer/<%= user.userId %> "><%= helper.formatFullName(user.fullName) %> </a>
                                <a title="Đăng xuất" href="/auth/logout">Đăng xuất</a>

                            <% } else if (user && user.role > 0) { %>
                                <a href="/nhanlaptop-admin/profile"><%= helper.formatFullName(user.fullName) %> </a>
                                <a title="Đăng xuất" href="/auth/logout">Đăng xuất</a>
                                
                            <% } else { %>  
                                <a title="Đăng ký" href="/auth/register">Đăng ký</a>
                                <a title="Đăng nhập" href="/auth/login">Đăng nhập</a>
                            <% } %> 
                        </span>
                    </div>
                    <div class="header-separator"></div>
                    <div class="wrapper-cart">
                        <a href="/gio-hang">
                            <button class="icon-cart">
                                <i class="fas fa-shopping-bag"></i>
                                <span class="cart-count-product">0</span>    
                            </button>
                        </a>
                        <a title="Giỏ hàng" href="/gio-hang">Giỏ hàng</a>
                    </div>
               </div>
            </div>
        </div>
    </div>
